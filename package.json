{
  "name": "miro-templating",
  "version": "1.0.0",
  "description": "Create new Miro boards based on a template. Includes tools to create & test the templates.",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/Collaborne/miro-templating/issues"
  },
  "homepage": "https://github.com/Collaborne/miro-templating#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Collaborne/miro-templating.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "env LOG4JS_CONFIG=test/log4js.json TS_NODE_CACHE=false TS_NODE_FILES=true node ${_NODE_ARGS} $(npm bin)/nyc mocha",
    "prepublish": "npm run lint && npm run build",
    "create-board": "TS_NODE_FILES=true node -r ts-node/register ${_NODE_ARGS} tools/create-board.ts",
    "create-template": "TS_NODE_FILES=true node -r ts-node/register ${_NODE_ARGS} tools/create-template.ts",
    "query-board": "TS_NODE_FILES=true node -r ts-node/register ${_NODE_ARGS} tools/query-board.ts"
  },
  "files": [
    "src/",
    "tslint.json",
    "tsconfig*.json",
    "dist/"
  ],
  "engines": {
    "node": ">=12.13.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.1",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.3.6",
    "chai": "^4.2.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "ts-node": "^8.3.0",
    "tsconfig-collaborne": "^1.3.0",
    "tslint": "^5.18.0",
    "tslint-config-collaborne": "^1.0.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.144",
    "@types/marked": "^0.7.3",
    "@types/request": "^2.48.4",
    "@types/request-promise-native": "^1.0.17",
    "check-node-version": "^3.0.0",
    "lodash": "^4.17.15",
    "log4js": "^6.0.0",
    "marked": "^1.1.0",
    "mkdirp": "^1.0.4",
    "npm-warn-shrinkwrap": "^1.0.2",
    "p-iteration": "^1.1.8",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "source-map-support": "^0.5.6",
    "turndown": "^6.0.0"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "recursive": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "interface": "bdd"
  },
  "nyc": {
    "exclude": [
      "**/*.d.ts",
      "build/",
      "test/"
    ],
    "all": true
  }
}
